import EmailIcon from "../assets/img/email-icon.png";
import Facebook from "../assets/img/facebook.svg";
import HorizontalDivder2 from "../assets/img/horizontal-divider2.png";
import HorizontalDivider from "../assets/img/horizontal-divider.png";
import Star from "../assets/img/star.png";

// Icons
import FooterLinkIcon from "../assets/img/footerLinkIcon.svg";
import InstagramIcon from "../assets/img/instagram.svg";

const api_URL = import.meta.env.PUBLIC_ApiUrl;

// Fetch Platform data
const api_url = `${api_URL}/api/resource/Simprosys%20Post%20Category?fields=["*"]&filters=[["category_criteria","=","Category"]]&order_by=\`order\` asc`;

const Platform_data_api = await fetch(api_url, {
  method: "GET",
  headers: {
    Authorization: `token ${import.meta.env.PUBLIC_ApiKey}:${import.meta.env.PUBLIC_SecretKey}`,
  },
});

const Platform_data_json = await Platform_data_api.json();
const Platform_data = Platform_data_json.data; // Get the data from the response

// Fetching Shopify Data
const shopifyData = Platform_data.filter(
  (item: any) => item.parent_simprosys_post_category === "Shopify"
);

// Fetching Shopline Data
const shoplineData = Platform_data.filter(
  (item: any) => item.parent_simprosys_post_category === "Shopline"
);

// Fetching Wix Data
const wixData = Platform_data.filter(
  (item: any) => item.parent_simprosys_post_category === "Wix"
);

// Fetching Woocommerce Data
const woocommerceData = Platform_data.filter(
  (item: any) => item.parent_simprosys_post_category === "Woocommerce"
);
